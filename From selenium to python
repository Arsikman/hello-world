package com.mycompany.app;


        import com.codeborne.selenide.Configuration;
        import org.junit.*;
        import org.openqa.selenium.By;

        import static com.codeborne.selenide.Screenshots.takeScreenShot;
        import static com.codeborne.selenide.Selenide.$;
        import static com.codeborne.selenide.Selenide.*;

public class MyTest {
    @Test
    public void testReg() {
        Configuration.browser = "marionette";
        open("https://www.somesite.com/");
        $(By.cssSelector("SomeCssSelector")).click();
        $(By.linkText("Register")).click();
        $(By.id("FirstID")).setValue("FirstName");
        $(By.id("SecondID")).setValue("LastName");
        $(By.id("ThridID")).setValue("Your-email@dot.com");
        $(By.id("FourthID")).setValue("Your-email@dot.com");
        $(By.xpath("//SomeXpath")).setValue("Your_Password");
        $(By.xpath("//AnotherXpath")).setValue("Your_Password");
        $(By.name("SomeNameOfButton")).click();
        sleep(2000);
        takeScreenShot("ScreenShot.png");
    }
}
